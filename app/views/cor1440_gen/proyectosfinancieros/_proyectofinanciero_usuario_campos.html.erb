<tr class='nested-fields' data-controller='usuario-con-grupo'>
  <td>
    <% col = Msip::ModeloHelper.opciones_tabla_basica(::Usuario, f, :usuario) %>
    <%= f.association :usuario,
      collection: col,
      label: false,
      label_method: lambda { |n| n.nombre.to_s },
      value_method: :id,
      include_blank: "POR CONTRATAR",
      input_html: { 
        #class: 'chosen-select',
        'data-action': 'usuario-con-grupo#cambiar_grupo'
      } %>
  </td>
  <td data-usuario-con-grupo-target='grupo'>
    <%= f.object.usuario ? 
      f.object.usuario.msip_grupo.map(&:nombre).join('; ') : '' %>
  </td>
  <td>
    <%= f.input :id, as: :hidden %>
    <%= link_to_remove_association "Eliminar", f, 
        :class => 'btn btn-sm btn-danger' 
    %>
    <div><%= f.error_notification %></div>
  </td>
</tr>

<% descendientes = f.object.id ? [f.object.id] : [] %>
<% desant = [] %>
<% while descendientes.count > 0 && descendientes != desant %>
  <% col = col.where('id NOT IN (?)', descendientes) %>
  <% desant = descendientes %>
  <% descendientes += col.where('subde_id IN (?)', descendientes).map(&:id) %>
<% end %>

<% pais_id = params && params[:filtro] && params[:filtro][:buspais] ? 
  params[:filtro][:buspais].to_i : 0 %>
<%= f.input :buspais,
  collection: Msip::Pais.habilitados,
  include_blank: true,
  input_html: {
    class: 'tom-select',
    data: {
      "action": "change->msip--geodep#cambiar_pais",
      enviarautomatico: ''
    },
    value: pais_id
  },
  label: false,
  label_method: :nombre,
  selected: Msip::ModeloHelper.poromision(params, :buspais),
  valud_method: :id
%>

<div class="accordion" id="acordeon_caids">
  <%= item_acordeon_bs(
    'acordeon_familiarvictimasids', 'indirectaids', 
    'Expandir / Colapsar', false, {
      'estilo_accordion-header': 'text-align: center',
      'clase_accordion-body': 'table-responsive',
      'estilo_accordion-body': 'overflow-x:scroll'
    }) do %>
    <table class='table table-bordered table-sm'>
      <thead class='thead-light'>
        <tr>
          <th>Id Caso</th><th>Víctima Directa</th><th>Relación</th>
        </tr>
      </thead class='thead-light'>
      <tbody>
        <% @registro.como_familiar_de_victima.each do |pt| %>
          <tr>
            <td>
              <% v = Sivel2Gen::Victima.find(pt.persona1) %>
              <%= link_to v.id_caso, sivel2_gen.caso_path(v.id_caso), target: '_blank' %>
            </td>
            <td>
              <%= v.persona.presenta_nombre %>
            </td>
            <td>
              <%= pt.trelacion.nombre %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

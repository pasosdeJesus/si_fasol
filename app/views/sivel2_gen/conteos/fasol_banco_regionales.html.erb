<!DOCTYPE html>

<html>
  <head>

    <style>
body {
  font-family: 'Lato',Helvetica,Arial,Lucida,sans-serif;
  font-size: 15px;
  text-align: center;
  color: #777;
}
table {
  border-collapse: collapse;
}
    </style>
  </head>
  <body>
    <div class="fasol_banco_regionales">
      <table border="1">
      <tbody>
        <tr>
          <td>
            <h5>Hecho Violento</h5>
          </td>
          <td colspan="<%= @enctabla.length-1 %>">
            <h5>Regional</h5>
          </td>
          <td><h5>Total</h5></td>
        </tr>
        <tr>
          <th>
          </th>
          <% totcol = [] %>
          <% (1..@enctabla.length-1).each do |i| %>
            <th>
              <% if @enctabla[i].to_s == '' %>
                S/R
              <% else %>
                <%= @enctabla[i][0..2] %>
              <% end %>
              <% totcol[i] = 0 %>
            </th>
          <% end %>
          <th></th>
        </tr>
        <% (0..@cuerpotabla.length-1).each do |i| %>
          <tr>
            <th>
              <%= @cuerpotabla[i][0] %>
            </th>
            <% totfil = 0 %>
            <% (1..@enctabla.length-1).each do |j| %>
              <td>
                <%= @cuerpotabla[i][j] %>
                <% totcol[j] += @cuerpotabla[i][j] %>
                <% totfil += @cuerpotabla[i][j] %>
              </td>
            <% end %>
            <td><%= totfil %></td>
          </tr>
        <% end %>
        <tr>
          <th>
            Total
          </th>
          <% totfil = 0 %>
          <% (1..@enctabla.length-1).each do |i| %>
            <td>
              <%= totcol[i] %>
              <% totfil += totcol[i] %>
            </td>
          <% end %>
          <td><%= totfil %></td>
        </tr>
      </tbody>
      </table>
    </div>
  </body>
</html>
